{
    "builds": [
      { "src": "api/**/*.js", "use": "@vercel/node" },
      { "src": "public/**/*", "use": "@vercel/static" }
    ],
    "routes": [
      { "src": "/api/sendEmail", "dest": "api/sendEmail.js"},
      { "src": "/js/(.*)", "dest": "/public/js/$1" },
      { "src": "/css/(.*)", "dest": "/public/css/$1" },
      { "src": "/images/(.*)", "dest": "/public/images/$1" },
      { "src": "/video/(.*)", "dest": "/public/video/$1" },

      { "src": "/(index\\.html|about\\.html|contact\\.html|services\\.html|study-visa-service\\.html|family-visa-service\\.html|blog\\.html|spousal-sponsorship\\.html|googlecb398a2aa054e246\\.html|contact-us\\.html)", "dest": "/public/$1" },
      { "src": "/blog/(.*)", "dest": "/public/blog/$1" },
      { "src": "/", "dest": "public/index.html" }
    ]
}